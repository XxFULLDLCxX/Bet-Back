{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "ts-node": {
    "esm": true,
    "require": ["typescript-transform-paths/register"],
  }
}
