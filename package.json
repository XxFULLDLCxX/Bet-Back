  "main": "server.ts",
  "scripts": {
    "build": "ttsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "postlint": "echo 'Well done! Your code has no linting errors.'",
    "test": "npm run test:load-envs -- jest --passWithNoTests --runInBand --config jest.config.ts",
    "coverage": "npx jest --coverage --runInBand --coverageReporters=json-summary --coverageDirectory=coverage --collectCoverageFrom='**/*.ts'",
    "test:coverage": "npx jest --coverage --runInBand --coverageReporters=html --coverageDirectory=coverage --collectCoverageFrom='**/*.ts'",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "test:seed": "npm run test:load-envs prisma db seed",
    "test:load-envs": "dotenv -e .env.test --",
    "dev:load-envs": "dotenv -e .env.development --",
    "dev:migration:run": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev": "npm run dev:load-envs -- nodemon --exec node -r ts-node/register src/server.ts",
    "prepare": "husky install"
  },
